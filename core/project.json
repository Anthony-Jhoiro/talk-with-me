{
  "name": "core",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "./core/src",
  "targets": {
    "build": {
      "executor": "@jnxplus/nx-gradle:run-task",
      "outputs": ["{projectRoot}/build"],
      "options": {
        "task": "bootJar"
      },
      "dependsOn": ["copy-front"]
    },
    "build-image": {
      "executor": "@jnxplus/nx-gradle:run-task",
      "options": {
        "task": "bootBuildImage"
      },
      "dependsOn": ["copy-front"]
    },
    "serve": {
      "executor": "@jnxplus/nx-gradle:run-task",
      "options": {
        "task": "bootRun",
        "keepItRunning": true
      }
    },
    "test": {
      "executor": "@jnxplus/nx-gradle:run-task",
      "options": {
        "task": "test"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo ### To implement ###"
      }
    },
    "copy-front": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p ./core/src/main/resources/static",
          "cp -r ./dist/admin-webclient/* ./core/src/main/resources/static"
        ],
        "parallel": false
      },
      "dependsOn": ["^build"]
    },
    "set-version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mvn versions:set -DnewVersion={args.version}",
        "cwd": "{workspaceRoot}/core"
      },
      "dependsOn": ["^build"]
    }
  },
  "tags": [],
  "implicitDependencies": ["admin-webclient"]
}
